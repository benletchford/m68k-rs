# Dockerfile for building 68040 test fixtures
FROM --platform=linux/amd64 ubuntu:22.04

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        gcc-m68k-linux-gnu \
        binutils-m68k-linux-gnu \
        make \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /work
CMD ["/bin/bash"]
